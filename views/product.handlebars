<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{text}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

 <h3>Comments:</h3>
  {{#each comments as |comment| }}
   <p>{{comment.text}} by {{comment.user.name}}</p>
   {{/each}}

  <p>
    <a class="btn btn-primary comment-btn" href="/comment/{{id}}">Comment!</a>
  </p>
  {{#if sameUser }}
  <p>
    <a class="btn btn-primary" href="/edit/{{id}}">Edit!</a>
  </p>
  {{/if}}
</div>
